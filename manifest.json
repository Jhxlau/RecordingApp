{
  "name": "Screen Recorder",
  "description": "Record camera, Desktop, Windows, and tabs",
  "version": "1.0.4",
  "manifest_version": 3,
  "minimum_chrome_version": "49",
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  /*"app": {
    "background": {
      "scripts": ["background.js"]
    }
  },/** */
  "background": {
      "service_worker": "background.js"
    },
  "action": {},
  "permissions": [
    "desktopCapture",
    "contextMenus",
    "tabCapture",
    "desktopCapture"
    //"audioCapture",
    //"videoCapture"
  ]
  
}
